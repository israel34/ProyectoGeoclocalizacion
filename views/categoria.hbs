        <script src=""></script>
        <script>
var t = jQuery.noConflict();


t().ready(function () {

    // validate signup form on keyup and submit
    t("#categoria").validate({
        rules: {
            nombre: {
                required: true,
                minlength: 3
            }
        },
        messages: {
            nombre: {
                required: "Ingrese el nombre por favor",
                minlength: "Minimo 2 caracteres"
            }
        }
    });
});



        </script>




        <!-- ***** Header Area Start ***** -->
