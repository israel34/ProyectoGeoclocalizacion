        <!-- ****** seccion ****** -->
        <section class="caviar-testimonials-area" id="testimonial">
            <div class="container">
                <div class="row">

                </div>
            </div>
        </section>


        <!-- ****** Reservation Area Start ****** -->
        <section class="caviar-reservation-area d-md-flex" id="reservation">
            <div class="reservation-form-area d-flex justify-content-end">
                <div class="reservation-form">
                    <div class="section-heading">
                        <h2>Agregar categoria</h2>
                    </div>
                    <form action="/guardar/categoria" method="post" id="categoria">
                        <input type="hidden" name="external" value="0" id="external"/>
                        <div class="row">

                            <div class="col-12 col-lg-12">
                                <input type="text" class="form-control" placeholder="Nombre" name="nombre" id="nombrec">
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn caviar-btn"><span></span>Agregar categoria</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="reservation-form-area d-flex justify-content-end">
                <div class="reservation-form">
                    <div class="section-heading">
                        <h2>Lista de categorias</h2>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nro</th><th>Nombre</th><th>Accion</th>
                            </tr>
                        </thead>

                        <tbody>
                            {{#each this.categoria as |item i|}}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ item.nombre }}</td>

                                <td>
                                    <a  id="{{ i }}" class="btn btn-primary" >Editar</a>  
                                    <script>
                                        t("#{{ i }}").click(function () {

                                            t("#nombrec").val("{{ item.nombre }}");

                                            t("#external").val("{{ item.external_id }}");
                                        });
                                    </script>  

                                </td>
                            </tr>                    
                            {{/each }}
                        </tbody>


                    </table>
                </div>
            </div>
        </section>
        <!-- ****** Reservation Area End ****** -->
        <section class="caviar-testimonials-area" id="testimonial">
            <div class="container">
                <div class="row">

                </div>
            </div>
        </section>

