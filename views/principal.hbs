        <!-- Buscar Dependencias Script -->

        <script>
$(document).ready(function () {
    $("#buscarDependencia").keyup(function () {
        var busqueda = $("#buscarDependencia").val();
        buscarDependencia(busqueda);
        buscarPorCategoria(busqueda);
    });
});

function buscarDependencia(busqueda) {
    $.ajax({
        url: '/admin_buscar_dependencias/' + busqueda,
        type: 'GET',
        dataType: 'json',
        success: function (data, textStatus, jqXHR) {
            var html = "";
            for (var i = 0; i < data.length; i++) {
                html += ' <div class="col-md-4">';
                html += '<div class="card shadow" style="width: 20rem;">';
                html += '<div class="inner"><img class="card-img-top" src="img/3.jpg" alt="Card image cap"></div>';
                html += '<div class="card-body text-center">';
                html += '<h5 class="card-title">' + data[i].nombre + '</h5>';
                html += '<p class="card-text">' + data[i].descripcion + '</p>';
                html += '<a href="#" class="btn btn-primary">Ver ruta</a>';
                html += '  </div>';
                html += ' </div>';
                html += ' </div>';
            }
            $("div#lugarBuscado").html(html);
        }, error: function (jqXHR, textStatus, errorThrown) {
        }
    });
}
function buscarPorCategoria(busqueda) {
    $.ajax({
        url: '/admin_buscar_categorias/' + busqueda,
        type: 'GET',
        dataType: 'json',
        success: function (data, textStatus, jqXHR) {
            var html = "";
            data.forEach(categoria => {
                categoria.forEach(dependencia => {
                    html += ' <div class="col-md-4">';
                    html += '<div class="card shadow" style="width: 20rem;">';
                    html += '<div class="inner"><img class="card-img-top" src="img/3.jpg" alt="Card image cap"></div>';
                    html += '<div class="card-body text-center">';
                    html += '<h5 class="card-title">' + dependencia.nombre + '</h5>';
                    html += '<p class="card-text">' + dependencia.descripcion + '</p>';
                    html += '<a href="#" class="btn btn-primary">Ver ruta</a>';
                    html += '  </div>';
                    html += ' </div>';
                    html += ' </div>';
                });
            });
            $("div#lugarBuscado").html(html);
        }, error: function (jqXHR, textStatus, errorThrown) {
        }
    });
}

        </script>

